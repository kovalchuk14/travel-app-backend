    "/stories": {
      "get": {
        "tags": [
          "Stories"
        ],
        "summary": "Get all stories",
        "description": "Retrieve a paginated list of all stories. Use query param `mine=true` to get user's own stories.",
        "operationId": "getAllStories",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number"
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Items per page"
          },
          {
            "in": "query",
            "name": "category",
            "schema": {
              "type": "string"
            },
            "description": "Items per page"
          },
          {
            "in": "query",
            "name": "mine",
