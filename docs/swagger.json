                  "category": {
                    "type": "string",
                    "example": "68fb50c80ae91338641121f0"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-01-10"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Story successfully created",
