        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "img",
                  "title",
                  "article",
                  "category",
                  "date"
                ],
                "properties": {
                  "img": {
                    "type": "string",
                    "example": "https://ftp.goit.study/img/travel-blog/68498236a100312bea079008.webp"
                  },
                  "title": {
                    "type": "string",
                    "example": "Йорданія: шлях у Петру"
